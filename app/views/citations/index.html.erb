<!-- Not using shared code at present, stubbing so we link to cited objects -->
<div class="flexbox"> 
  <div class="item item1">
    <h2><%= model_name_title -%></h2>
  </div>

  <div class="item item2">
    <%= list_for_model_link(@data_model) %><br>
    <%= search_form_for_model(@data_model) %><br>
    <%= download_for_model_link(@data_model) %><br>

    <div>
      <h2> Recent Updates </h2>
      <ul> 
        <% @recent_objects.each do |r| -%>
          <li> <%= link_to(citation_tag(r), r.citation_object.metamorphosize) -%> <%= object_time_since_update_tag(r) -%> ago </li>
        <% end %>
      </ul>
      <%= content_tag(:em, "No recently updated or created #{@data_model.name.tableize.humanize}.") if @recent_objects.empty? -%>
    </div>


  </div>

  <div class="item item3">
    <em> Recent task list goes here </em>
  </div>

  <div class="item item4">
    <em> Comprehensive task list goes here </em>
  </div>
</div>

