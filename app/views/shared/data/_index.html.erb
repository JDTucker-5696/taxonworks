
<div class="flexbox"> 

  <div class="item item1">
    <h2><%= model_name_title -%></h2>
  </div>

  <div class="item item2">
    <%= new_for_model_link(@data_model) %><br />
    <%= list_for_model_link(@data_model) %><br />
    <%= search_form_for_model(@data_model) %>
    <%= download_for_model_link(@data_model) %>
  </div>

  <div class="item item3">
    <h2> Recent Updates </h2>
    <ul> 
      <% @recent_objects.each do |r| -%>
        <li> <%= object_link(r) -%> <%= edit_object_link(r) -%>  <%= object_time_since_update_tag(r) -%> ago </li>
    <% end %>
    </ul>
    <%= content_tag(:em, "No recently updated or created #{@data_model.name.tableize.humanize}.") if @recent_objects.empty? -%>
  </div>


  <div class="item item4">
    <h2> Batch load </h2> 
    
    <%= form_tag batch_preview_otus_path, multipart: true do -%>
      <%= file_field_tag :file -%>
      <%= submit_tag 'Preview' -%>
    <% end %>

  </div>
</div>

