<h2> Annotations </h2>
<% if object.annotations.empty? -%>
  <p> None. </p>
<% else %>
  <% object.annotations.each do |title, values| -%>
    <%= content_tag(:h3, title.humanize) -%>
    <% values.each do |v| -%>
      <p class="list">
      <%= (title == 'depictions' ? object_link(v) : object_tag(v)) -%>
      <%= link_to('edit', edit_object_path(v)) unless v.class.name == 'Tag' -%>
      </p>
    <% end %>
  <% end %>
<% end %>
