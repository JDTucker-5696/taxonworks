<div id="pinboard">
  <div class="container">
    <h2>Pinboard</h2>
    <% sessions_current_user.pinboard_hash(sessions_current_project_id).each do |object_type, items| -%>
      <h3><%= object_type.pluralize -%></h3>
      <ul>
        <% items.each do |o| -%>
          <li>
            <div class="horizontal-center-content">
              <img src="assets/icons/pin.svg"/> <%=  object_link(o.pinned_object) -%>
            </div>
            <%= link_to('Remove', pinboard_item_path(o), method: :delete) -%>
          </li>
        <% end %>
      </ul>
    <% end %>
    <%= content_tag(:p, 'Nothing on your pinboard!', class: :subtle) if sessions_current_user.pinboard_hash(sessions_current_project_id).keys.empty? -%>
  </div>
</div>

