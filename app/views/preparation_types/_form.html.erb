<%= form_for(@preparation_type) do |f| %>
    <%= render 'shared/errors', object: @preparation_type %>

    <div class="field">
      <%= f.label :name %>
      <br>
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :definition %>
      <br>
      <%= f.text_area :definition %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>
