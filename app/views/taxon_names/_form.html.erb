<%= form_for(@taxon_name.becomes(TaxonName)) do |f| %>
  <% if @taxon_name.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@taxon_name.errors.count, "error") %> prohibited this taxon_name from being saved:</h2>

      <ul>
      <% @taxon_name.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :parent %><br>
    <%= render :partial => "elements/forms/ajax_select", :locals => {:controller => 'taxon_names',
