                                                                     :display => parent_taxon_name_for_select(@taxon_name)  } %>
  </div>

  <div class="field">
    <%= f.label :year_of_publication %><br>
    <%= f.number_field :year_of_publication %>
  </div>
  <div class="field">
    <%= f.label :verbatim_author %><br>
    <%= f.text_field :verbatim_author %>
  </div>
  
  <div class="field">
    <%= f.label :rank %><br>
    <%= taxon_name_rank_select_tag(@taxon_name) %>
  </div>

  <div class="field">
    <%= f.label :source_id %><br>
    <%= f.number_field :source_id %>
  </div>

  <%= f.hidden_field :type %>

 <div class="actions">
    <%= f.submit %>
  </div>
