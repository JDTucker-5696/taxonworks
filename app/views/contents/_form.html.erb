<%= form_for(@content) do |f| %>
    <% if @content.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@content.errors.count, "error") %> prohibited this content from being saved:</h2>

          <ul>
            <% @content.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :text %>
      <br>
      <%= f.text_area :text %>
    </div>
    <div class="field">
      <%= f.label :otu_id %>
      <br>
      <%= render :partial => 'elements/forms/ajax_select',
                 :locals  => {:controller => 'otus',
                              :object     => 'otu',
                              :method     => 'otu_id',
                              :tag_id     => 'otu_id_for_content',
                              :display    => otu_tag(@content.otu)} %>
    </div>
    <div class="field">
      <%= f.label :topic_id %>
      <br>
      <%= render :partial => 'elements/forms/ajax_select',
                 :locals  => {:controller => 'contents',
                              :object     => 'content',
                              :method     => 'topic_id',
                              :tag_id     => 'topic_id_for_content',
                              :display    => object_tag(@content.topic)} %>
    </div>
    <div class="field">
      <%= f.label :type %>
      <br>
      <%= f.text_field :type %>
    </div>
    <div class="field">
      <%= f.label :revision_id %>
      <br>
      <!-- TODO: correct this for the true purpose of 'revision' -->
      <%= f.number_field :revision_id %>
      <!--<%#= render :partial => 'elements/forms/ajax_select',-->
                 <!--:locals  => {:controller => 'contents',-->
                              <!--:object     => 'content',-->
                              <!--:method     => 'revision_id',-->
                              <!--:tag_id     => 'revision_id_for_content',-->
                              <!--:display    => object_tag(@content.revision)} %>-->
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>
