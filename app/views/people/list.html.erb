<%= render("/shared/data/all/list/list_header", objects: @people) -%>

<table class="tablesorter">
  <thead>
  <tr>
    <%= fancy_th_tag(name: 'Type') -%>
    <%= fancy_th_tag(name: 'Last name') -%>
    <%= fancy_th_tag(name: 'First name') -%>
    <%= fancy_th_tag(name: 'Suffix') -%>
    <%= fancy_th_tag(name: 'Prefix') -%>
    <%= fancy_th_tag(name: 'Updated by', group: 'housekeeping') -%>
    <%= fancy_th_tag(name: 'Last updated', group: 'housekeeping') -%>
  </tr>
  </thead>

  <tbody>
  <% @people.each do |person| %>
      <%= content_tag(:tr, class: [:contextMenuCells, :btn, 'btn-neutral']) do -%>
          <td><%= person.type %></td>
          <td><%= person.last_name %></td>
          <td><%= person.first_name %></td>
          <td><%= person.suffix %></td>
          <td><%= person.prefix %></td>
          <%= fancy_metadata_cells_tag(person) -%>
      <% end %>
  <% end %>
  </tbody>
</table>
