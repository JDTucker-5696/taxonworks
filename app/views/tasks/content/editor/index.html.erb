<div id="content_editor">

  <div id="subjects"> 
    <recent></recent>

    <div id="current">
      <div id="subject_type"></div>
      <div id="subject_search"></div>
    </div>

  </div>

  <div class="flexbox">
    <autocomplete 
      url="/otus/autocomplete"
      min="3"
      param="term"
      label="label">
    </autocomplete>
    <topic-section class="panel topic-panel">
    </topic-section>

    <div id="core" class="item item2">

      <div id="configure">
        <subject> </subject>
        <topic> </topic>
      </div> 

      <panel-editor></panel-editor>

      <div id="metadata">
        <div id="figures"></div>
        <div id="citations"></div>
      </div>

    </div>
  </div>
</div>

<template>
  <div class="flexbox">
    <form action="">
      <input type="radio" name="gender" value="male"> Add topic<br>
      <input type="radio" name="gender" value="female"> Select OTU
    </form> 
  </div>
</template>
