<h1>Task: Georeference matcher</h1>
<div class="flexbox">
  <div class="item item1">
    <h2>Collecting Events</h2>
    find by:
    <%= link_to('filter', filtered_collecting_events_path) %> |
    <%= link_to('tag', tagged_collecting_events_path) %> |
    <%= link_to('drawing', drawn_collecting_events_path) %> |
    <%= link_to('recent', recent_collecting_events_path) %>

    <br>--------------------------------------
