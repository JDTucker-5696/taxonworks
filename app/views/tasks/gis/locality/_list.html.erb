<h1>Task: Collecting Event - Locality names by area </h1>
<div class="flexbox">
  <div class="item item1">
    <div id="_select_ce_form">
      <%= form_tag('list') do %>
          <%= render(partial: 'shared/data/gis/area_selector',
                     locals:  {passed_in_tag_id:    'geographic_area_id_for_new_locality_list',
                               shown_georeferences: []}) %>
          <%= submit_tag('Show') %>
      <% end %>
    </div>
    <div id="_draw_ce_form_outer">
      <%= render(partial: 'tasks/gis/match_collecting_event/draw_collecting_events_form') %>
    </div>
  </div>
  <div class="item item2">
    <%= render partial: 'locality_list', locals: {object: @collecting_events} -%>
  </div>
</div>
