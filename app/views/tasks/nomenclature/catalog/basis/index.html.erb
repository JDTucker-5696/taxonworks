<div class="flexbox">
  <div id="brownse-main-panel" class="panel separate-left separate-right attributes-panel">
    <div class="break_words">
      <div class="content center_text"> 
        <h2>
          <%= content_tag(:span, full_taxon_name_tag(@taxon_name), class: 'name') -%>
        </h2>
      </div>
      <div class="content">
        <div class="attributes"> 
          <ul class="taxonomic_history">
            <% @data.ordered_by_nomenclature_date.each do |c| -%>
              <%= nomenclature_catalog_li_tag(c, @data.reference_taxon_name, :basis_catalog_task_path) -%> 
            <% end %>
          </ul>
          <br/>
          <% if @data.sources.any? %> 
            <%= content_tag(:h3, 'Citations')-%>
            <ul class="citations">
              <% @data.sources.each do |s| -%>
                <%= content_tag(:li, source_nomenclature_tag(s, @data.topics_for_source(s))) -%>
              <% end %> 
            </ul>                          
          <% end %>
        </div>
      </div>
    </div>
  </div> 
</div>
