<%= form_tag create_verbatim_material_task_path do %>
   
    <h2>Identifier</h2>
    <div>
    <div class="field">
      <%= label_tag 'Namespace/Institution/Coden' %>
      <%= select :identifier, :namespace_id, options_from_collection_for_select(@namespaces, :id, :name, @namespace.id) %>
      <%= check_box :locks, :namespace %>
      <%= label_tag 'lock' %>
    </div>

    <div class="field" >
      <%= label_tag :identifier %>
      <%= text_field :identifier, :identifier %>
      <%= check_box :locks, :increment %>
      <%= label_tag 'increment + 1' %>
      </div>
    </div>

    <h2>Repository</h2>

    <div class="field">
      <%= render partial: 'workbench/elements/forms/ajax_select',
        locals:  {controller: '/repositories',
                  object:     'repository',
                  method:     'id',
                  tag_id:     'repository_id_for_bulk_verbatim',
                  size: 60,
                  display:    object_tag(@repository)
      } %>

      <%= check_box :locks, :repository %>
      <%= label_tag 'lock' %>
    </div>

    <h2>Verbatim data</h2>
    <div class="field">
      <%= label_tag :collecting_event %>
      <%= text_area :collection_object, :buffered_collecting_event %>
      <%= check_box :locks, :collecting_event %>
      <%= label_tag 'lock' %>
    </div>
    <div class="field">
      <%= label_tag :determinations %>
      <%= text_area :collection_object, :buffered_determinations  %>
      <%= check_box :locks, :determinations %>
      <%= label_tag 'lock' %>
    </div>
    <div class="field">
      <%= label_tag :other_labels %>
      <%= text_area :collection_object, :buffered_other_labels  %>
      <%= check_box :locks, :other_labels %>
      <%= label_tag 'lock' %>
    </div>
    <div class="field">
      <%= label_tag :notes %> (attached to all material)
      <%= text_area :notes, :text %>
      <%= check_box :locks, :note %>
      <%= label_tag 'lock' %>
    </div>

    <%= render 'attribute_form' %>

    <div class="actions">
      <%= submit_tag 'Create' %>
    </div>
<% end %>
