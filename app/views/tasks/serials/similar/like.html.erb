          <li><dfn  class="dfn_bold">place published:</dfn> <%= @serial.place_published -%></li>
      <% ) unless @serial.place_published.blank?   -%>
      <% ( -%>
          <li><dfn  class="dfn_bold">place published:</dfn> <%= @serial.place_published -%></li>
      <% ) unless @serial.place_published.blank?   -%>
      <% ( -%>
          <li><dfn  class="dfn_bold">place published:</dfn> <%= @serial.place_published -%></li>
      <% ) unless @serial.place_published.blank?   -%>
      <% ( -%>
          <li><dfn  class="dfn_bold">place published:</dfn> <%= @serial.place_published -%></li>
      <% ) unless @serial.place_published.blank?   -%>
      <% ( -%>
          <li><dfn  class="dfn_bold">place published:</dfn> <%= @serial.place_published -%></li>
      <% ) unless @serial.place_published.blank?   -%>
      <% ( -%>
          <li><dfn  class="dfn_bold">place published:</dfn> <%= @serial.place_published -%></li>
      <% ) unless @serial.place_published.blank?   -%>
      <% ( -%>
          <li><dfn  class="dfn_bold">place published:</dfn> <%= @serial.place_published -%></li>
      <% ) unless @serial.place_published.blank?   -%>

      <!--
      <dt class="dt_inline">first year of issue:</dt>  <dd> <%= @serial.id -%></dd>
