<h1>Listing depictions</h1>

<%= paginate @depictions %> <%= page_entries_info @depictions %>

<table>
  <thead>
    <tr>
      <th>Depiction object</th>
      <th>Image</th>
      <th>Created by</th>
      <th>Updated by</th>
      <th>Project</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @depictions.each do |depiction| %>
      <tr>
        <td><%= object_tag(depiction.depiction_object.metamorphosize) %></td>
        <td><%= image_tag(d.image.image_file.url(:thumb)) %></td>
        <td><%= depiction.updated_at %></td>
        <td><%= object_tag(depiction.updater) %></td>
        <td><%= link_to 'Show', depiction %></td>
        <td><%= link_to 'Edit', edit_depiction_path(depiction) %></td>
        <td><%= link_to 'Destroy', depiction, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


