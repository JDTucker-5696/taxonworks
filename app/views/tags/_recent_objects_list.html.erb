<ul>
  <% @recent_objects.each do |r| -%>
      <li> <%= link_to(object_tag(r.keyword) + ' on ' + object_tag(r.tag_object) + ' (a ' + kind(r.tag_object), r.tag_object.metamorphosize) + ')' -%> <%= object_time_since_update_tag(r) -%> ago</li>
  <% end %>
</ul>

<%= content_tag(:em, "No recently updated or created #{@data_model.name.tableize.humanize}.") if @recent_objects.empty? -%>

