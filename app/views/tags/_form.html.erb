<%= form_for(@tag) do |f| %>
    <% if @tag.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@tag.errors.count, "error") %> prohibited this tag from being saved:</h2>

          <ul>
            <% @tag.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :keyword %>
      <br>
      <%#= f.number_field :keyword_id %>
      <br>
      <%= render :partial => 'elements/forms/ajax_select',
                 :locals  => {:controller => 'controlled_vocabulary_terms',
                              :object     => 'controlled_vocabulary_term',
                              :method     => 'keyword_id',
                              :tag_id     => 'keyword_id_for_controlled_vocabulary_term',
                              :display    => object_tag(@tag.keyword)} %>
    </div>
    <div class="field">
      <%= f.label :tag_object %>
      <br>
      <%#= f.number_field :tag_object_id %>
      <br>
      <%#=TODO: how to dereference the controller/object combinations based on actual object type %>
      <%= render :partial => 'elements/forms/ajax_select',
                 :locals  => {:controller => 'otus',
                              :object     => 'otu',
                              :method     => 'tag_object_id',
                              :tag_id     => 'tag_object_id_for_object',
                              :display    => object_tag(@tag.tag_object)} %>
    </div>
    <div class="field">
      <%= f.label :tag_object_type %>
      <br>
      <%= f.text_field :tag_object_type %>
    </div>
    <div class="field">
      <%= f.label :tag_object_attribute %>
      <br>
      <%= f.text_field :tag_object_attribute %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>
