<h1>Listing tags</h1>

<%= paginate @tags %> <%= page_entries_info @tags %>

<table>
  <thead>
  <tr>
    <th>Tag object type</th>
    <th>Tag object</th>
    <th>Tag object attribute</th>
    <th>Keyword</th>
    <th>Position</th>
    <th>Last modified</th>
    <th>Updated by</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @tags.each do |tag| %>
      <tr>
        <td><%= tag.tag_object_type %></td>
        <td><%= object_tag(tag.tag_object) %></td>
        <td><%= tag.tag_object_attribute %></td>
        <td><%= tag.keyword.name %></td>
        <td><%= tag.position %></td>
        <td><%= tag.updated_at %></td>
        <td><%= object_tag(tag.updater) %></td>
        <td><%= link_to 'Context', tag.tag_object.metamorphosize %></td>
        <td><%= link_to 'Destroy', tag, method: :delete, data: {confirm: 'Are you sure?'} %></td>
      </tr>
  <% end %>
  </tbody>
</table>

