<%= form_for(@tag) do |f| %>
    <%= render 'shared/errors', object: @tag %>

    <p><strong><%= @tag.tag_object.class.name %>:</strong> <%= object_tag(@tag.tag_object) -%>
    <div id="tag_auto">
      <div class="field">
        <%= f.label :keyword_id %>
        <%#= f.number_field :keyword_id %>
        <br>
        <%= render :partial => 'workbench/elements/forms/ajax_select',
                   :locals => {:controller => 'keywords',
                               :object => 'tag',
                               :method => 'keyword_id',
                               :tag_id => 'keyword_id_for_controlled_vocabulary_term',
                               :display => object_tag(@tag.keyword)} %>
      </div>
      <%= f.hidden_field :tag_object_type %>
      <%= f.hidden_field :tag_object_id %>
      <%= render partial: '/tags/tag_picker',
                 locals: {tag: Tag.new(), object: @tag, f: f}
      %>
      <div class="actions">
        <%= f.submit %>
      </div>
    </div>
<% end %>
