<nav id="quick_bar">
  <div class="project_hub"><%= link_to('Hub', hub_path, class: :hub_link) -%> <!---- make this change color etc. when actually on /hub ---->
    <%= content_tag(:h1, sessions_current_project.name, class: :hub_project_name) if sessions_current_project -%></div>

  <% if @data_model -%>
  <div class="context menu"><!---- float this right ---->
    <ul class="horizontal_navbar left_justified">
      <% if Hub::Data::BY_NAME[@data_model.name] -%> 
        <%= content_tag(:li, link_to(Hub::Data::BY_NAME[@data_model.name].name, @data_model, 'class' => 'active-section')) -%>
        <% Hub::Data::BY_NAME[@data_model.name].related_models.each do |m| -%>
          <%= quick_bar_link(m) -%> 
        <% end %>
      <% end %> 
    </ul>
  </div>
  <% end %>
</nav>
