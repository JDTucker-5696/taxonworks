<%= form_for(@project) do |f| %>
  <%= render 'shared/errors', object: @project %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :generate_new_api_access_token %>
    <br>
    <%= f.check_box :set_new_api_access_token %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
