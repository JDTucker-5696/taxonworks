<%= content_for :head do -%>
  <%= javascript_include_tag "//www.google.com/jsapi", "chartkick" %>
<% end %>

<h1><%= @project.name -%></h1>
<%= link_to 'Edit', edit_project_path(@project) %> 

<div> 

  <div class="row1">
    <div class="flexbox">
      <div class="item item1">
        <h2> Project attributes </h2>
        <%= render partial: 'attributes' -%>
      </div>

      <div class="item item2">
        <h2> Members </h2>
        <% if @project.users.any? -%>
          <ul>
            <%= @project.users.collect{|u| content_tag(:li, user_tag(u))}.join.html_safe -%>
          </ul>
        <% else  %>
          <em> No members added yet! </em>
        <% end %>
        <%= add_project_member_link(@project.to_param) -%><br>
        <%= link_to('Add new user', signup_path) -%>
      </div>

      <div class="item item3">
        <h2> Metadata </h2>
        <%= link_to 'Stats', stats_project_path, data: { no_turbolink: true } -%>
      </div>
    </div>
  </div>

  <% if sessions_current_project_id == @project.id -%>
    <div class="row2">
      <h2> Recently created </h2>
      <%= column_chart recently_created_stats_project_path, width: '500px', height: '300px', discrete: true, library: { backgroundColor: "#eee", vAxis: { format: '#'}  }  %>
    </div>
  <% end %>

</div>
