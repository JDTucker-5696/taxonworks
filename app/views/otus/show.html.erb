<%= content_for :do do -%>
    <ul class="no_bullets">
      <%= content_tag(:li, link_to('Add new asserted distribution by map',
                                   new_asserted_distribution_task_path(asserted_distribution: {otu_id: @otu.to_param}),
                                   'data-no-turbolink' => true)
          ) %>
    </ul>
<% end %>
<%= content_for :see do -%>
  <ul class="no_bullets">
    <%= content_tag(:li, link_to_if((@otu.asserted_distributions.count > 0), 'Distribution',
                                    otu_distribution_data_task_path(@otu.to_param),
                                    'data-no-turbolink' => true)) 
                                  %>

                                <%= content_tag(:li, link_to('Contents', preview_otu_content_path(@otu.id), 'data-no-turbolink' => true)) %>



    </ul>
<% end %>


<%= render(partial: 'shared/data/project/show', locals: {object: @otu}) -%>
