<div class="required">
  <div class="field <%= collapsed_css_property_if(hide_type) -%> ">
    <%= f.label :type %>
    <%= f.select :type, options_for_select(controlled_vocabulary_term_type_select_options, controlled_vocabulary_term.type) %>
  </div>

  <div class="field">
    <%= f.label :name %>
    <br>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :definition %>
    <br>
    <%= f.text_area :definition, rows: 5, cols: 60 %>
  </div>

  <div class="field">
    <%= f.label :css_color %>
    <br>
    <%= f.text_field :css_color, type: 'color' %>
  </div>
</div>

<div class="field">
  <%= f.label :uri %>
  <br>
  <%= f.text_field :uri, size: 60 %>
</div>

<div class="field">
  <%= f.label :uri_relation %>
  <br>
  <%= f.select :uri_relation, options_for_select(SKOS_RELATIONS.keys, controlled_vocabulary_term.uri_relation), include_blank: true -%> 
</div>
