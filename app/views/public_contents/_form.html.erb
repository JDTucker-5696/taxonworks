<%= form_for(@public_content) do |f| %>
    <%= render 'shared/errors', object: @public_content %>

    <div class="field">
      <%= f.label :otu_id %>
      <br>
      <%= f.number_field :otu_id %>
    </div>
    <div class="field">
      <%= f.label :topic_id %>
      <br>
      <%= f.number_field :topic_id %>
    </div>
    <div class="field">
      <%= f.label :text %>
      <br>
      <%= f.text_area :text %>
    </div>
    <div class="field">
      <%= f.label :content_id %>
      <br>
      <%= f.number_field :content_id %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>
