<%= form_for(@user, :url => set_password_path(params[:token])) do |f| %>
  <div id="login-container">
    <div class="logo"></div>
    <div class="logo-text"></div>
    <div class="box-login">
      <h3>Password reset</h3>
      <% if @user.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@user.errors.count, 'error') %> prohibited this user from being saved:</h2>
          <ul>
            <% @user.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <div>
        <div class="field">
          <%= f.password_field :password, { autocomplete: 'off', "placeholder" => "New password", "class" => "big-input" }  %>
        </div>

        <div class="field">
          <%= f.password_field :password_confirmation, { autocomplete: 'off',  "placeholder" => "New password confirmation", "class" => "big-input"} %>
        </div>
        <%= f.submit 'Change password', "class" => "big-input button button-submit" %>
      </div>
    </div>
  </div>
<% end %>
