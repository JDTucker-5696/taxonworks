<div id="login-container">
  <div class="logo"></div>
    <div class="logo-text"></div>
  <div class="box-login">
  <h3>Password recovery</h3>
    <%= form_tag action: 'send_password_reset' do %>
      <div>
        <div class="field">
          <%= text_field_tag :email, "", "placeholder" => "Email", "class" => "big-input" %>
        </div>
        <%= submit_tag('Send e-mail', "class" => "big-input button button-request") %>
      </div>
    <% end %>
  </div>
</div>